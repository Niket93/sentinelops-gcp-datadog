{
    "name": "SentinelOps â€¢ Action Delivery SLO",
    "type": "metric",
    "description": "Percentage of attempted actions successfully delivered (sent) over total attempted actions. Hackathon SLO for reliability.",
    "tags": [
        "service:sentinelops",
        "env:dev",
        "team:hackathon",
        "project:sentinelops"
    ],
    "thresholds": [
        {
            "timeframe": "7d",
            "target": 99.0,
            "warning": 99.5
        },
        {
            "timeframe": "30d",
            "target": 99.0,
            "warning": 99.5
        }
    ],
    "query": {
        "numerator": "sum:sentinel.action.sent{service:sentinelops,env:dev}.as_count()",
        "denominator": "sum:sentinel.action.attempted{service:sentinelops,env:dev}.as_count()"
    }
}